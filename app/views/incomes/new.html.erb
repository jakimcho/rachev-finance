<div class="row">
  <div class="col-md-7 col-md-offset-2">
<%= form_for :income, :builder => JRForm , url: user_incomes_path do |f| %>
  <div class="form_group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>

    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: 8 %>

    <%= f.label :income %>
    <%= f.monetary_field :income, 0.00, "form-control" %>

    <%= f.label :account, "Select account for the income" %>
    <%= f.select :account_id, current_user.accounts.all.collect { |a| [ a.name, a.id ] }, {}, 
                 include_blank: false, class: "form-control input-lg-2 input-sm" %>

    <%= f.label :date, "Select Date for the Income" %>
    <%= f.date_field :date, :value => Time.now.strftime('%Y-%m-%d'),  class: "form-control" %>

    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
</div>
</div>