<h1>Expenses#index</h1>

<h2> Expenses number <%= current_user.expenses.length %> </h2>
<table>
  <tr>
    <th>Description</th>
    <th>Expense Value</th>
    <th>From Account</th>
    <th>Date</th>
  </tr>

  <% current_user.expenses.each do |expense| %>
    <tr>
      <td><%= expense.description %></td>
      <td><%= expense.amount %></td>
      <td><%= expense.account.name %></td>
      <td><%= expense.date %></td>
    </tr>
  <% end %>
  <%= link_to t("expenses.create_expense_link"),  new_user_expense_path(current_user) %>
</table>
