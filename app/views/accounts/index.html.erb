<h1>Accounts#index</h1>

<h2> Accounts number <%= @accounts.length %> </h2>
<table id="accounts_table" class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Balance</th>
      <th>User</th>
      <th>Family</th>
    </tr>
  </thead>

  <% @accounts.each do |account| %>

  <tbody>
    <tr onclick="window.location.href='accounts/<%= account.id %>'">
      <td><%= account.name %></td>
      <td><%= account.balance %></td>
      <td><%= account.user.name %></td>
      <td><%= account.user.family.name %></td>
    </tr>
  </tbody>

  <% end %>
  <%= link_to t("user.create_account"),  new_user_account_path(current_user) %>
</table>
